    <script>
        // Einfache JavaScript-Logik f√ºr Modellauswahl
        document.getElementById('brand').addEventListener('change', function() {
            const brand = this.value;
            const modelSelect = document.getElementById('model');
            
            // Leere vorherige Optionen
            modelSelect.innerHTML = '<option value="">Bitte w√§hlen</option>';
            
            if (brand === 'apple') {
	                addModels(['iPhone 16 Pro Max', 'iPhone 16 pro', 'iPhone 16 Plus', 'iPhone 16', 'iPhone 15 Pro Max', 'iPhone 15 Pro', 'iPhone 15 Plus', 'iPhone 15', 'iPhone 14 Pro Max', 'iPhone 14 Pro', 'iPhone 14 Plus', 'iPhone 14', 'iPhone 13 Pro Max', 'iPhone 13 Pro', 'iPhone 13' ]);
            } else if (brand === 'samsung') {
                addModels(['Galaxy S23', 'Galaxy S22', 'Galaxy S21', 'Galaxy Note 20', 'Galaxy Z Flip']);
            } else if (brand === 'huawei') {
                addModels(['P50 Pro', 'P40 Pro', 'Mate 40', 'Nova 9']);
            } else if (brand === 'xiaomi') {
                addModels(['13 Pro', '12T Pro', '11T Pro', 'Redmi Note 12']);
            }
            
            function addModels(models) {
                models.forEach(model => {
                    const option = document.createElement('option');
                    option.value = model.toLowerCase().replace(' ', '-');
                    option.textContent = model;
                    modelSelect.appendChild(option);
                });
            }
        });
        
        // Formular absenden (Beispiel)
        document.querySelector('form').addEventListener('submit', function(e) {
            e.preventDefault();
            alert('Ihr voraussichtlicher Preis: 250‚Ç¨\n\nWir senden Ihnen jetzt eine E-Mail mit den Versanddetails!');
        });
    </script>
